<?xml version="1.0" encoding="utf-8" ?>
<web-app>
	<!-- 서블릿 S -->
	<!-- 게시판 작성 S -->
	<servlet>
		<servlet-name>BlogWrite</servlet-name>
		<servlet-class>com.controller.WriteController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>BlogWrite</servlet-name>
		<url-pattern>/blog/write</url-pattern>
	</servlet-mapping>
	<!-- 게시판 작성 E -->
	<!-- 게시판 조회 S -->
	<servlet>
		<servlet-name>BlogView</servlet-name>
		<servlet-class>com.controller.ViewController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>BlogView</servlet-name>
		<url-pattern>/blog/view</url-pattern>
	</servlet-mapping>
	<!-- 게시판 조회 E -->
	<!--  게시글 삭제 S -->
	<servlet>
		<servlet-name>BlogDelete</servlet-name>
		<servlet-class>com.controller.DeleteController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>BlogDelete</servlet-name>
		<url-pattern>/blog/delete</url-pattern>
	</servlet-mapping>
	<!--  게시글 삭제 E -->
	<!--  게시글 수정 S -->
	<servlet>
		<servlet-name>BlogEdit</servlet-name>
		<servlet-class>com.controller.EditController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>BlogEdit</servlet-name>
		<url-pattern>/blog/edit</url-pattern>
	</servlet-mapping>
	<!--  게시글 수정 E -->
	<!--  게시글 목록 S -->
	<servlet>
		<servlet-name>BlogList</servlet-name>
		<servlet-class>com.controller.ListController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>BlogList</servlet-name>
		<url-pattern>/blog/list</url-pattern>
	</servlet-mapping>
	<!--  게시글 목록 E -->
	<!--  파일 업로드 S -->
	<servlet>
		<servlet-name>FileUpload</servlet-name>
		<servlet-class>com.controller.FileUploadController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>FileUpload</servlet-name>
		<url-pattern>/popup/upload</url-pattern>
	</servlet-mapping>
	<!-- 파일 업로드 E -->
<!-- 서블릿 두번째 S -->
	<!-- 메인페이지 /index.jsp -->
	<servlet>
		<servlet-name>main</servlet-name>
		<servlet-class>com.controller.MainController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>main</servlet-name>
		<url-pattern>/index.jsp</url-pattern>
	</servlet-mapping>
	<!-- 메인페이지 E  -->
	<!-- /kanban S  -->
	<servlet>
		<servlet-name>Kanban</servlet-name>
		<servlet-class>com.controller.KanbanController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Kanban</servlet-name>
		<url-pattern>/kanban/*</url-pattern>
	</servlet-mapping>
	<!-- /kanban E -->
	<!-- /member S -->
	<servlet>
		<servlet-name>Member</servlet-name>
		<servlet-class>com.controller.MemberController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Member</servlet-name>
		<url-pattern>/member/*</url-pattern>
	</servlet-mapping>
	<!-- /member E -->
	<!-- /file S -->
	<servlet>
		<servlet-name>File</servlet-name>
		<servlet-class>com.controller.FileController</servlet-class>	
	</servlet>
	<servlet-mapping>
		<servlet-name>File</servlet-name>
		<url-pattern>/file/*</url-pattern>
	</servlet-mapping>
	<!--  /file E -->
<!-- 서블릿 두번째 E  -->
	
	<!--  공통 필터 S -->
	<filter>
		<filter-name>Common</filter-name>
		<filter-class>com.filter.CommonFilter</filter-class>
		<init-param>
			<param-name>Driver</param-name>
			<param-value>com.mysql.cj.jdbc.Driver</param-value>
		</init-param>
		<init-param>
			<param-name>Url</param-name>
			<param-value>jdbc:mysql://localhost:3306/blog</param-value>
		</init-param>
		<init-param>
			<param-name>User</param-name>
			<param-value>root</param-value>
		</init-param>
		<init-param>
			<param-name>Pass</param-name>
			<param-value>aA!12345</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>Common</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<!--  공통 필터 E -->	
	<!-- 서블릿 E -->
	<!--  에러 페이지 S  -->
	<error-page>
		<error-code>404</error-code>
		<location>/views/error/404.jsp</location>
	</error-page>
	<error-page>
		<exception-type>java.lang.Throwable</exception-type>
		<location>/views/error/error.jsp</location>
	</error-page>
	<!--  에러 페이지 E  -->
</web-app>